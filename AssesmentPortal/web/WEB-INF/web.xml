<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.arcadian.loginservlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.arcadian.loginservlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseContentServlet</servlet-name>
        <servlet-class>com.arcadian.loginservlet.CourseContentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectAjaxServlet</servlet-name>
        <servlet-class>com.arcadian.loginservlet.SubjectAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignStudentServlet</servlet-name>
        <servlet-class>com.arcadian.loginservlet.AssignStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/AddUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseContentServlet</servlet-name>
        <url-pattern>/CourseContentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectAjaxServlet</servlet-name>
        <url-pattern>/SubjectAjaxServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>tempfile.dir</param-name>
        <param-value>tmpfiles</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>AssignStudentServlet</servlet-name>
        <url-pattern>/AssignStudentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
